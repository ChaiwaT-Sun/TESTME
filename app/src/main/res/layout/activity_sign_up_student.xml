<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SignUpStudent">


    <TextView
        android:text="REGISTER"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_above="@id/wrap_signup" />

    <RelativeLayout
        android:id="@+id/wrap_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerInParent="true">


        <LinearLayout
            android:id="@+id/info_signup"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Etxt_new_idstudent"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#8effffff"
                android:paddingEnd="10dp"
                android:background="@drawable/bubble"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:hint="ID Student"
                android:inputType="numberDecimal"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/Etxt_new_username"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#8effffff"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bubble"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/Etxt_new_password"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColorHint="#8effffff"
                android:paddingEnd="32dp"
                android:background="@drawable/bubble"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/info_signup"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            >

            <Button
                android:id="@+id/btn_new_sign_up"
                android:text="REGISTER"
                android:layout_margin="5dp"
                android:background="@drawable/bubblegreen"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_back_home"
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bubblegreen"
                android:text="BACK" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>